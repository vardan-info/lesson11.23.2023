public class Main {
    public static void main(String[] args) {
       int Array[][] = {
                {0, 1, 2, 3, 4},
                {0, 1, 2, 3},
                {0, 1, 6},
        };
        int sum = 0;
        for (int i = 0; i < Array.length; i++) {
            for (int k = 0; k < Array.length; k++) {
                if ((i+k)%2==0) {

                    sum+=Array[i][k];
//                    System.out.println(Array[i][k]);


                }

            }

        }

System.out.println(sum);
    }
}
