
public class Main {
    public static void main(String[] args) {
               int Array[][]= {
                {-5,4,3,2},
                {5,-1,2},
                {5,-2},
        };
        int count=0;
        for(int i =0;i< Array.length;i++){
            for (int k=0;k< Array[i].length;k++){
                if(Array[i][k]<0){
                    count++;
                    System.out.println(Array[i][k]);
                }
            }
        }
        System.out.println(count);
    }
}
